{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "lib": ["ES2022"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./server/*"]
    }
  },
  "include": ["server", "prisma"],
  "exclude": ["node_modules", "src", "dist"]
}
